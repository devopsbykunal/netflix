pipeline {
    agent any 
    
    stages {
        stage('checkout') {
            steps {
                git 'https://github.com/devopsbykunal/netflix.git'
            }
        }
        stage('build') {
            steps {
                sh 'docker build -t $image .'
            }
        }
        stage('tag') {
            steps {
                sh 'docker tag $image $repo'
            }
        }
        stage('trivy') {
            steps {
                sh 'trivy fs . > trivyfs.txt'
            }
        }
        stage('push') {
            steps {
                sh 'docker login -u joshikunal -p $password'
                sh 'docker push $repo'
            }
        }
        stage('deploy') {
            steps {
                sh 'docker stack deploy -c docker-compose.yml netflix'
            }
        }
    }
    
}
